{
  "name": "Tab-less Togglable",
  "version": "0.6.0",
  "manifest_version": 2,
  "description": "Enables user to turn tabs on or off for tab-less browsing when needed",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/detach_new_tabs.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "19": "images/icon-19.png",
      "32": "images/icon-32.png",
      "38": "images/icon-38.png",
      "64": "images/icon-64.png"
    },
    "default_title": "Toggle between windowed and tabbed mode"
  },
  "permissions": [
	"storage"
  ]
}
